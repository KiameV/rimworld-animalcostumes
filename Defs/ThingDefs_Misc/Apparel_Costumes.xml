<Defs>
	<ThingDef ParentName="ArmorMakeableBase">
		<defName>Apparel_TanookiCostume</defName>
		<label>Tanooki Costume</label>
		<description>A costume for tanooki-like knowledge.</description>
		<graphicData>
			<texPath>Apparel/AnimalCostumes/Tanooki/Body</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<researchPrerequisite>AnimalCostumes</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<costStuffCount>250</costStuffCount>
		<costList>
			<Component>4</Component>
			<Steel>75</Steel>
			<Plasteel>15</Plasteel>
		</costList>
		<statBases>
			<WorkToMake>50000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>5</Mass>
			<ArmorRating_Blunt>0.225</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.225</ArmorRating_Sharp>
			<ArmorRating_Heat>0.225</ArmorRating_Heat>
			<!--<ComfyTemperatureMin>-35</ComfyTemperatureMin>
			<ComfyTemperatureMax>-15</ComfyTemperatureMax>-->
			<Insulation_Cold>-10</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.4</MoveSpeed>
			<TameAnimalChance>0.1</TameAnimalChance>
			<TrainAnimalChance>0.1</TrainAnimalChance>
			<ToxicSensitivity>-0.1</ToxicSensitivity>
			<ShootingAccuracy>-0.1</ShootingAccuracy>
			<MeleeHitChance>-0.1</MeleeHitChance>
			<SocialImpact>0.1</SocialImpact>
			<RecruitPrisonerChance>0.1</RecruitPrisonerChance>
			<MedicalTendSpeed>0.1</MedicalTendSpeed>
			<ConstructionSpeed>0.1</ConstructionSpeed>
			<SmithingSpeed>0.1</SmithingSpeed>
			<SmeltingSpeed>0.1</SmeltingSpeed>
			<ButcheryMechanoidSpeed>0.1</ButcheryMechanoidSpeed>
			<SmoothingSpeed>0.1</SmoothingSpeed>
			<EatingSpeed>0.1</EatingSpeed>
			<BedRestEffectiveness>0.1</BedRestEffectiveness>
			<WorkSpeedGlobal>0.1</WorkSpeedGlobal>
			<ResearchSpeed>0.1</ResearchSpeed>
			<WorkTableWorkSpeedFactor>0.1</WorkTableWorkSpeedFactor>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/AnimalCostumes/Tanooki/Body</wornGraphicPath>
			<layers>
				<li>Shell</li>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Tribal</li>
				<li>Outlander</li>
				<li>TribalTrader</li>
				<li>OutlanderTrader</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<generateCommonality>2</generateCommonality>
	</ThingDef>
	
